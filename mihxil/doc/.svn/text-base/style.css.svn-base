
body {
     background-color: white;
     margin-left: 3%;
     margin-right: 12%;
     padding-left: 20px;
     padding-right: 20px;
}

body p {
  margin-top: 0;
  margin-bottom: 0;
  padding-top: 10px;
  padding-left: 10px;
  background-color: #eee;
}

div.toc {
  display: block;
  background: transparent;
  text-align: right;
  position: fixed;
  top: 2em;
  left: auto;
  width: 15%;
  right: 2em;
}

div.toc h1 {
  color: blue;
  font-size: 1em;
  text-align: right;
  text-weight: bold;
}

div.toc p {
  background: transparent;
}


h1 {
  text-align: center;
}

h2 {
 margin-top: 20px;
 margin-bottom: 0;	
  background-color: #eee;
}


h3 {
 margin-top: 0;
 margin-bottom: 0;	
 background-color: #eee;
}

pre {
 margin-top: 0;
 margin-bottom: 0;	
  background-color: #eee;
}

ul {
 margin-top: 0;
 margin-bottom: 0;	
  background-color: #eee;
}



h2.chapter {
  color: black;
	   
}

h2.appendix {
  color: red;
}

h2.appendix:before {
  content: "APPENDIX "
}