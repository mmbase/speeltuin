<jsp:root
    xmlns="http://www.w3.org/1999/xhtml" 
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0" version="1.2">
  <mm:content type="text/css" postprocessor="none">

    <mm:url write="false" id="back"   page="/mmbase/style/images/back.png" />
    <mm:url write="false" id="create" page="/mmbase/style/images/create.png" />
    <mm:url write="false" id="search" page="/mmbase/style/images/search.png" />
    <mm:url write="false" id="ok"     page="/mmbase/style/images/ok.png" />
    <mm:url write="false" id="logout" page="/mmbase/style/images/reload.png" />

@import url(<mm:url page="/mmbase/style/css/mmbase.css" />);
body { 
  margin: 0px 0px 0px 0px;
  padding: 0px 0px 0px 0px;
  margin-top: 40px;
}
table { 
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 1px;
  padding-right: 1px;
  width: 100%;
  
}

img { 
  border: none;
  margin: 0px 0px 0px 0px;
  padding: 0px 0px 0px 0px;
}

#searchresult tbody tr:hover { 
  cursor: pointer;
}
#searchresult tbody tr.odd:hover { 
  background-color: #e0f0e0;
}
#searchresult tbody tr.even:hover { 
  background-color: #d8e8d8;
}
#searchresult tbody tr.odd.readonly:hover { 
  background-color: #f0e0e0;
}
#searchresult tbody tr.even.readonly:hover { 
  background-color: #e8d8d8;
}

#searchresult.delete tbody tr.selected.odd {
 background-color: #ffffaa;
}
#searchresult.delete tbody tr.selected.even {
 background-color: #ffff00;
}

#searchresult tbody tr.selected.odd {
  background-color: #f0f0e0;
}
#searchresult tbody tr.selected.even {
  background-color: #e8e8d8;
}

#searchresult tbody tr.selected.odd:hover {
  background-color: #e0f0e0;
}
#searchresult tbody tr.selected.even:hover {
  background-color: #d8e8d8;
}

#searchresult tbody tr.selected.odd.readonly:hover { 
  background-color: #f0e0e0;
}
#searchresult tbody tr.selected.even.readonly:hover { 
  background-color: #e8d8d8;
}


#searchresult tfoot { 
  display: block;
  position: fixed;
  bottom: 0px;
  height: 39px;
  width: 100%;
  padding-bottom: 0px;
  border-top: solid black 1px;
  background-color: #ddd;
}

#searchresult { 
  margin-bottom: 50px;
}
.mm_check_error {
  background-color: #f0e0e0;
}

input.small, input.big, textarea { 
  width: 100%;
}
h1 {
  display: block;
  width: 100%;
  top: 0px;
  height: 39px;
  border-bottom: solid black 1px;
  position: fixed;
  font-size: medium;
  background-color: #ddd;
  margin-top: 0px;
  padding: 0px 0px 0px 0px;  
  overflow: hidden;
}
h1 img { 
  vertical-align: top;
}
h1 a { 
}

h1.submitted { 
  background-color: #f0e0e0;
}
h1.ok { 
  background-color: #e0f0e0;
}
h1.new { 
  background-color: #f0f0e0;
}
h1.readonly {
  background-color: #f0a0a0;
}
td {
  vertical-align: top;
}
span.currentpage { 
  font: larger bold;
}

a span.navigate {
 display: none;
}

a.create::before {
 content: url(${create});
}
a.back::before {
 content: url(${back});
}
a.search::before{
 content: url(${search});
}
a.ok::before{
 content: url(${ok});
}

.logininfo {  

  display: block;
  position: fixed;
  right: 0px;
  top: 0px;
}
a.logout::before {
  content: url(${logout});
}

h2 {
  font-size: smaller;
  border-top: 1px solid;
  background-color: #ddd;
}
  </mm:content>
</jsp:root>
