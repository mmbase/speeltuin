<project>
    <extend>${basedir}/../maven-base/project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>mmbase:mmbase-core-config</id>
    <artifactId>mmbase-core-config</artifactId>
    <name>mmbase-core-config</name>
    <groupId>mmbase</groupId>
    <shortDescription>Configuration for MMBase</shortDescription>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/config</directory>
                <targetPath>org/mmbase/config</targetPath>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/INDEX</include>
                    <include>**/*.dtd</include>
                    <include>**/*.properties</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>

